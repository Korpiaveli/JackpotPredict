# JackpotPredict Backend Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Mode: local | gemini | openai
# ============================================
# - "local": Use TabbyAPI with local Qwen 2.5 32B model (requires GPU)
# - "gemini": Use Google Gemini API (RECOMMENDED - 1,500 free requests/day)
# - "openai": Use OpenAI API ($5 free credits for new accounts)
LLM_MODE=local

# ============================================
# Google Gemini API (RECOMMENDED)
# ============================================
# Best value: 1,500 FREE requests/day (more than enough for 10 games/week)
# Pricing: $0.075/1M input tokens, $0.30/1M output tokens (if you exceed free tier)
# Get key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/openai/
GEMINI_MODEL=gemini-2.0-flash

# ============================================
# OpenAI API (Alternative)
# ============================================
# $5 free credits (expires in 3 months)
# Pricing: $0.15/1M input, $0.60/1M output
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Local Inference (TabbyAPI)
# ============================================
# Requires: TabbyAPI running with Qwen 2.5 32B model
TABBY_API_URL=http://127.0.0.1:5000/v1
TABBY_MODEL=Qwen2.5-32B-Instruct-4.0bpw-exl2

# ============================================
# Ollama Fallback
# ============================================
# Used when local TabbyAPI is not available
OLLAMA_API_URL=http://127.0.0.1:11434/v1
OLLAMA_MODEL=qwen2.5:14b

# ============================================
# Inference Settings
# ============================================
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=200
LLM_TIMEOUT=30

# ============================================
# Hybrid Mode
# ============================================
# Enable LLM + Bayesian combination for best accuracy
ENABLE_HYBRID=true
